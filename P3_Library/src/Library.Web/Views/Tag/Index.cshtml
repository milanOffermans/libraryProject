@model TagListViewModel
@{
    ViewData["Title"] = "tags";
}
<h2>Tags</h2>
<div class="left-side-buttons">
    <button class="btn btn-primary" onclick="addTag()">add tag</button>
</div>
<div class="tags">
    @foreach (var tags in Model.Tags)
    {
        <vc:load-all-tags item="@tags"></vc:load-all-tags>
    }
</div>
<script language="javascript">
    function addTag() {

        window.location.href = "https://localhost:7114/Tag/Create/";
    }

    function deleteTag(id) {
        var url = "https://localhost:7114/Tag/Delete?id=" + id;
    // ReSharper disable once PossiblyUnassignedProperty
    // ReSharper disable once UseOfImplicitGlobalInFunctionScope
        $.ajax(url,
        {
            type: 'POST',
            timeout: 1000,
            success: function (data) {
                alert(`Tag ${data} was deleted!`);
                window.location.href = "https://localhost:7114/Tag";
            },
            error: function (jqXhr, textStatus, errorMessage) {
                alert(errorMessage);
            }
        });
    }
</script>
